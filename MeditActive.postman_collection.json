{
  "info": {
    "_postman_id": "0a4f5f9c-d1d3-4f78-a4ef-676a7eab3df1",
    "name": "MeditActive API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Crea utente",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test\",\n  \"surname\": \"User\",\n  \"email\": \"test{{timestamp}}@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users",
          "host": ["{{baseUrl}}"],
          "path": ["users"]
        }
      }
    },
    {
      "name": "Login (salva token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "if (json.token) {",
              "  pm.environment.set(\"token\", json.token);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "Get utenti",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/users",
          "host": ["{{baseUrl}}"],
          "path": ["users"]
        }
      }
    },
    {
      "name": "Get utente per ID",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/users/1",
          "host": ["{{baseUrl}}"],
          "path": ["users", "1"]
        }
      }
    },
    {
      "name": "Aggiorna utente",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated\",\n  \"surname\": \"User\",\n  \"email\": \"updated@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users/1",
          "host": ["{{baseUrl}}"],
          "path": ["users", "1"]
        }
      }
    },
    {
      "name": "ðŸ‘¤ Elimina utente",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/users/1",
          "host": ["{{baseUrl}}"],
          "path": ["users", "1"]
        }
      }
    },
    {
      "name": "Crea goal",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Meditazione\",\n  \"description\": \"10 minuti al giorno\",\n  \"type\": \"daily\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/goals",
          "host": ["{{baseUrl}}"],
          "path": ["goals"]
        }
      }
    },
    {
      "name": "ðŸ§˜ Get tutti i goals",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/goals",
          "host": ["{{baseUrl}}"],
          "path": ["goals"]
        }
      }
    },
    {
      "name": "Crea intervallo",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": 1,\n  \"start_date\": \"2024-04-01\",\n  \"end_date\": \"2024-04-30\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/goal-intervals",
          "host": ["{{baseUrl}}"],
          "path": ["goal-intervals"]
        }
      }
    },
    {
      "name": "Filtra intervalli",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/goal-intervals?start_date=2024-04-01&end_date=2024-04-30&goal_id=1",
          "host": ["{{baseUrl}}"],
          "path": ["goal-intervals"],
          "query": [
            { "key": "start_date", "value": "2024-04-01" },
            { "key": "end_date", "value": "2024-04-30" },
            { "key": "goal_id", "value": "1" }
          ]
        }
      }
    },
    {
      "name": "Associa goal a intervallo",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"goal_id\": 1\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/goal-intervals/1/goals",
          "host": ["{{baseUrl}}"],
          "path": ["goal-intervals", "1", "goals"]
        }
      }
    },
    {
      "name": "Upload avatar (form-data)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "avatar",
              "type": "file",
              "src": "/percorso/al/file/avatar.jpg"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/users/1/avatar",
          "host": ["{{baseUrl}}"],
          "path": ["users", "1", "avatar"]
        }
      }
    }
  ]
}
